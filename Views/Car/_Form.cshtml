@model Car

<div class="mb-2">
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" min="1920" max="9999" />
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <select
            asp-for="ManufacturerId"
            asp-items="ViewBag.manufacturers"
            class="form-select"
            required
        >
            <option selected hidden>Selecione a fabricante</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="VehicleType"></label>
        <select
            asp-for="VehicleTypeId"
            asp-items="ViewBag.classes"
            class="form-select"
            required
        >
            <option selected hidden>Selecione a classe do ve√≠culo</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control" step="any" min="1" required />
    </div>
</div>
